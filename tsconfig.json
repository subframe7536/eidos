{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "experimentalDecorators": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "vite-plugin-pwa/react",
      "node",
      "vitest/globals",
      "@types/wicg-file-system-access"
    ]
  },
  "include": [
    "**/*.wasm",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".eslintrc.cjs",
    "prettier.config.cjs",
    "apps/web-app/rag.jsx",
    "scripts/version.cjs",
    "scripts/build-cf-worker.cjs"
, "scripts/notarize.cjs"  ],
  "exclude": [
    "node_modules",
    "dist",
    "dev-dist",
    "dist-electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}